<configuration>

  <appender name="STDOUT"
   class="ch.qos.logback.core.ConsoleAppender">
   <encoder>
     <pattern>
        %d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}%caller{0}\(%file:%line\) - %msg%n 
      </pattern>
    </encoder>
  </appender>
 
   <root level="debug">
    <appender-ref ref="STDOUT" />
  </root>
  
  <logger name="de.bstreit.java.oscr" level="warn" />

</configuration>